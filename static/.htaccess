# ---------------------------------------------------------------------
# Forcer HTTPS et WWW sur leo-nc.info
# ---------------------------------------------------------------------

# Active la réécriture d'URL
RewriteEngine On

# Si la connexion n'est pas en HTTPS → rediriger
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Si le domaine ne commence pas par www. → rediriger
RewriteCond %{HTTP_HOST} !^www\.leo-nc\.info$ [NC]
RewriteRule ^ https://www.leo-nc.info%{REQUEST_URI} [R=301,L]
